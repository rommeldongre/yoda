<resources>

    Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/textolor_settings_buttons</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:background">@drawable/selector_radio_btn</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@drawable/selector_radio_btn_text</item>
    </style>

    <style name="ColorPickerStyle">
        <item name="android:background">@drawable/selector_radio_btn</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="MyDialogueTheme" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

</resources>
