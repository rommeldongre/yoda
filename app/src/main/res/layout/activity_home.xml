<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:background="@drawable/background_temp"
    >
    <HorizontalScrollView
        android:id="@+id/scrollViewActHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"/>

    <LinearLayout
        android:id="@+id/BottomLayoutActHome"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></LinearLayout>

    <com.greylabs.yoda.views.MyArcProgress
        android:id="@+id/arcTotalProgressActHome"
        android:background="@color/transperent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/scrollViewActHome"
        />

</RelativeLayout>