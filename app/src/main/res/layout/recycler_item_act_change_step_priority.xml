<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/handleRecyclerItemActChangeStepPriority"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <!--android:background="?android:attr/selectableItemBackground"       requires API 11-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditStepRecyclerItemActChangeStepPriority"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_btn_edit_act_change_step_priority"
            />

        <Button
            android:id="@+id/btnDeleteStepRecyclerItemActChangeStepPriority"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btnEditStepRecyclerItemActChangeStepPriority"
            android:layout_marginRight="10dip"
            android:layout_margin="10dp"
            android:background="@drawable/ic_btn_delete_act_change_step_priority"
            />
        <!--android:background="@android:drawable/ic_menu_delete"-->

        <TextView
            android:id="@+id/tvStepNameRecyclerItemActChangeStepPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/btnDeleteStepRecyclerItemActChangeStepPriority"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>

