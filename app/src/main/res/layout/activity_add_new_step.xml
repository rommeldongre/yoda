<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolBarActAddNewStep"
        layout="@layout/tool_bar"></include>

    <ScrollView
        android:id="@+id/scrollViewAvtAddNewStep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBarActAddNewStep"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvStepNameActAddNewStep"
                            />

                        <EditText
                            android:id="@+id/edtStepNameActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtStepNameHintActAddNewStep"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            android:singleLine="true"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvGoalNameActAddNewStep"
                            />

                        <Spinner
                            android:id="@+id/spinnerGoalNameActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:prompt="@string/edtGoalNameHintActAddNewStep"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/btnShowAdvancedActAddNewStep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transperent"
                            android:text="@string/btnAdvancedActAddNewStep"
                            android:textStyle="bold"
                            android:textColor="@color/ColorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardViewAdvancedActAddNewStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/btnHideAdvancedActAddNewStep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transperent"
                            android:text="@string/btnHideAdvancedActAddNewStep"
                            android:textStyle="bold"
                            android:textColor="@color/ColorPrimary"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvPriorityActAddNewStep"
                            />
                        <Spinner
                            android:id="@+id/spinnerPriorityActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:prompt="@string/edtPriorityHintActAddNewStep"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip"
                            android:entries="@array/arrayStepPriorityActAddNewStep"
                            />
                        <!--android:entries="@array/arrayStepTypeActAddNewStep"-->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvStepTypeActAddNewStep"
                            />
                        <Spinner
                            android:id="@+id/spinnerStepTypeActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:prompt="@string/edtStepTypeHintActAddNewStep"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip"
                            android:entries="@array/arrayStepTypeActAddNewStep" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        android:id="@+id/SingleStepPanelActAddNewStep"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvSingleStepTimeActAddNewStep"
                            />
                        <SeekBar
                            android:id="@+id/seekbarSingleStepTimeActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip"
                            android:max="9"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/SeriesPanelActAddNewStep"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvStepsInSeriesActAddNewStep"
                            />
                        <SeekBar
                            android:id="@+id/seekbarStepsInSeriesActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip"
                            android:max="99" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvTimeForEachStepActAddNewStep"
                            />
                        <SeekBar
                            android:id="@+id/seekbarTimeForEachStepActAddNewStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:layout_marginTop="8dip"
                            android:max="9"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>