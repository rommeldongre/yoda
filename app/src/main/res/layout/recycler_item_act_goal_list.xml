<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewActGoalList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <!--android:background="?android:attr/selectableItemBackground"       requires API 11-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnHandleRecyclerItemActGoalList"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_btn_handle_gray"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/btnEditGoalRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/btnHandleRecyclerItemActGoalList"
            android:background="@drawable/ic_btn_edit_gray"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/btnDeleteGoalRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/btnEditGoalRecyclerItemActGoalList"
            android:background="@drawable/ic_btn_delete_gray" />
        <!--android:background="@android:drawable/ic_menu_delete"-->

        <com.greylabs.ydo.views.CircleView
            android:id="@+id/btnBulletRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            app:fillRadius="0.9"
            app:strokeColorValue="@color/ColorPrimary"
            app:titleColor="@color/white"
            app:titleText="0" />
        <!--app:backgroundColorValue="@color/gray"-->
        <!--app:fillColor="@color/pink"-->
        <!--app:titleSize="12dp"-->
        <!--app:subtitleText="subtitle"-->
        <!--app:subtitleSize="9dp"-->
        <!--app:subtitleColor="@color/background_btnimporttaskactquickstart"-->
        <!--app:strokeWidth="5"-->

        <LinearLayout
            android:id="@+id/llTvsRecyclerItemActGoalList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toLeftOf="@id/btnDeleteGoalRecyclerItemActGoalList"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGoalNameRecyclerItemActGoalList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tvEndDateOfGoalRecyclerItemActGoalList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/pbRecyclerItemActGoalList"
            style="@style/progressBarStyleMyGoalsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTvsRecyclerItemActGoalList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />
        <!--style="?android:attr/progressBarStyleHorizontal"-->
    </RelativeLayout>
</android.support.v7.widget.CardView>

