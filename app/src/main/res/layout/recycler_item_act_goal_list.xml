<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewActGoalList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--android:background="?android:attr/selectableItemBackground"       requires API 11-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="@color/gray"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <Button
            android:id="@+id/btnHandleRecyclerItemActGoalList"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_btn_handle_gray" />

        <Button
            android:id="@+id/btnEditGoalRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btnHandleRecyclerItemActGoalList"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_btn_edit_gray" />

        <Button
            android:id="@+id/btnDeleteGoalRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnEditGoalRecyclerItemActGoalList"
            android:layout_marginRight="10dip"
            android:layout_margin="10dp"
            android:background="@drawable/ic_btn_delete_gray" />
        <!--android:background="@android:drawable/ic_menu_delete"-->

        <com.greylabs.yoda.views.CircleView
            android:id="@+id/btnBulletRecyclerItemActGoalList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:titleColor="@color/white"
            app:titleText="0"
            app:strokeColorValue="@color/ColorPrimary"
            app:fillRadius="0.9"/>
        <!--app:backgroundColorValue="@color/gray"-->
        <!--app:fillColor="@color/pink"-->
        <!--app:titleSize="12dp"-->
        <!--app:subtitleText="subtitle"-->
        <!--app:subtitleSize="9dp"-->
        <!--app:subtitleColor="@color/background_btnimporttaskactquickstart"-->
        <!--app:strokeWidth="5"-->

        <LinearLayout
            android:id="@+id/llTvsRecyclerItemActGoalList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_toLeftOf="@id/btnDeleteGoalRecyclerItemActGoalList" >

            <TextView
                android:id="@+id/tvGoalNameRecyclerItemActGoalList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/tvEndDateOfGoalRecyclerItemActGoalList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/pbRecyclerItemActGoalList"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:progressTint="@color/ColorPrimaryDark"
            android:layout_below="@+id/llTvsRecyclerItemActGoalList" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

