<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp" >
        <Button
            android:id="@+id/btnQuickStartActQuickStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btnQuickStartActQuickStart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp" >
        <Button
            android:id="@+id/btnNewStepActQuickStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btnQuickStartActQuickStart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp" >
        <Button
            android:id="@+id/btnImportTaskActQuickStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btnQuickStartActQuickStart" />
    </RelativeLayout>
</LinearLayout>