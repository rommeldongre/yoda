<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/no_account"
            android:elevation="4dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text="@string/tvErrorViewActGoogleSettings"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle" />

        <Button
            android:id="@+id/btnAddAccountFlipperEmptyViewActGoogleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ColorPrimary"
            android:layout_gravity="center_horizontal"
            android:text="@string/btnAddAccountFlipperEmptyViewActGoogleSettings" />
    </LinearLayout>
</RelativeLayout>