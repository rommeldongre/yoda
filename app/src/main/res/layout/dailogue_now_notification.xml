<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cvNotEmptyViewNowNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tvNotEmptyNowNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp" >

                <TextView
                    android:id="@+id/tvGoalNameNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/gray"
                    android:maxLines="1"
                    android:text="Goal Name" />


                <TextView
                    android:id="@+id/tvStepNameNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="@color/gray"
                    android:maxLines="1"
                    android:text="Step Name" />

            </LinearLayout>

            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="10dp">-->

                    <!--<TextView-->
                        <!--android:id="@+id/tvTodayAtNowNotification"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
                        <!--android:textColor="@color/gray"-->
                        <!--android:text="Today at" />-->


                    <!--<TextView-->
                        <!--android:id="@+id/tvTimeNowNotification"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
                        <!--android:textColor="@color/gray" />-->
                <!--</LinearLayout>-->
            <!--</RelativeLayout>-->

            <LinearLayout
                android:id="@+id/llButtonsNowNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_material_light" />

                <LinearLayout
                    android:id="@+id/llDidNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp" >

                    <Button
                        android:id="@+id/btnDidNowNotification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_btn_step_completed" />

                    <TextView
                        android:id="@+id/tvCompletedNowNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/tvCompletedActNowFilter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_material_light" />

                <LinearLayout
                    android:id="@+id/llDoingItNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp" >

                    <Button
                        android:id="@+id/btnDoingItNowNotification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_btn_step_doing_it" />

                    <TextView
                        android:id="@+id/tvDoingItNowNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/tvDoingItActNowFilter" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_material_light" />

                <LinearLayout
                    android:id="@+id/llMissedNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" >

                    <Button
                        android:id="@+id/btnMissedNowNotification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_btn_step_missed"
                        />

                    <TextView
                        android:id="@+id/tvMissedNowNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/tvMissedActNowFilter" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogExcuseNowNotification"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/button_material_light" />

                <EditText
                    android:id="@+id/edtExcuseNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:hint="@string/edtExcuseDialogueExcuse"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="8dip" />

                <Button
                    android:id="@+id/btnLogExcuseNowNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnLogDialogueExcuse"
                    android:background="@color/ColorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dip" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvEmptyViewNowNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnCloseEmptyViewNowNotification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_btn_close" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/tvEmptyViewActNowFilter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#939393"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>