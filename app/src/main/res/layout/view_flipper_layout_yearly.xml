            android:layout_weight="1"
            style="@style/RadioButtonStyle"
            android:textColor="@drawable/selector_radio_btn_text" />

        <CheckBox
            android:id="@+id/cbActCreateTimeBoxOnYearlyNov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_act_create_timebox_on_yearly_nov"
            android:checked="false"
            android:layout_weight="1"
            style="@style/RadioButtonStyle"
            android:textColor="@drawable/selector_radio_btn_text" />

        <CheckBox
            android:id="@+id/cbActCreateTimeBoxOnYearlyDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cb_act_create_timebox_on_yearly_dec"
            android:checked="false"
            android:layout_weight="1"
            style="@style/RadioButtonStyle"
            android:textColor="@drawable/selector_radio_btn_text" />
