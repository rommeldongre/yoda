<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewActTimeBoxList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--android:background="?android:attr/selectableItemBackground"       requires API 11-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">

        <!--<Button-->
            <!--android:id="@+id/btnEditTimeBoxRecyclerItemActTimeBoxList"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:gravity="center_vertical"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:background="@drawable/ic_btn_edit_gray" />-->

        <Button
            android:id="@+id/btnDeleteTimeBoxRecyclerItemActTimeBoxList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/ic_btn_delete_gray" />
        <!--android:layout_toLeftOf="@+id/btnEditTimeBoxRecyclerItemActTimeBoxList"-->

        <com.greylabs.yoda.views.CircleView
            android:id="@+id/btnBulletRecyclerItemActTimeBoxList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:strokeColorValue="@color/ColorPrimary"
            app:fillRadius="0.9"/>

        <TextView
            android:id="@+id/tvGoalNameRecyclerItemActTimeBoxList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:maxLines="2"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/btnBulletRecyclerItemActTimeBoxList"
            android:layout_toLeftOf="@id/btnDeleteTimeBoxRecyclerItemActTimeBoxList" />

    </RelativeLayout>
</android.support.v7.widget.CardView>