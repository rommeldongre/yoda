<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolBarActAddNewGoal"
        layout="@layout/tool_bar"></include>

    <ScrollView
        android:id="@+id/scrollViewAvtAddNewGoal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvObjectiveActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtObjectiveActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtObjectiveHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvKeyResultActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtKeyResultActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtKeyResultHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvTimeActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtTimeActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:editable="false"
                            android:hint="@string/edtTimeHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvNickNameActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtNickNameActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtNickNameHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/btnShowAdvancedActAddNewGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transperent"
                            android:text="@string/btnAdvancedActAddNewGoal"
                            android:textStyle="bold"
                            android:textColor="@color/ColorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardViewAdvancedActAddNewGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >
                        <Button
                            android:id="@+id/btnHideAdvancedActAddNewGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transperent"
                            android:text="@string/btnHideAdvancedActAddNewGoal"
                            android:textStyle="bold"
                            android:textColor="@color/ColorPrimary"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvGoalReasonActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtGoalReasonActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtGoalReasonHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvGoalRewardActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtGoalRewardHintActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtGoalRewardHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dip"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:text="@string/tvGoalBuddyActAddNewGoal"
                            />

                        <EditText
                            android:id="@+id/edtGoalBuddyActAddNewGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:maxLines="4"
                            android:hint="@string/edtGoalBuddyHintActAddNewGoal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:background="@color/transperent"
                            android:layout_marginTop="8dip"
                            android:inputType="textWebEmailAddress"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="20dip"
                            android:background="@color/button_material_light" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.greylabs.yoda.views.MyFloatingActionButton
                android:id="@+id/btnAddNewStepActAddNewGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_btn_filter_act_home"
                fab:fab_colorNormal="@color/transperent_total_arc_background"
                fab:fab_colorPressed="@color/transperent_more"
                />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
